<%= form_with(model: [supplier, supplier_contact]) do |form| %>
  <% if supplier_contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supplier_contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul>
        <% supplier_contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :contact_name, "担当者名", style: "display: block" %>
    <%= form.text_field :contact_name %>
  </div>

  <div>
    <%= form.label :email, "メールアドレス", style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :phone, "電話番号", style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :fax, "FAX番号", style: "display: block" %>
    <%= form.text_field :fax %>
  </div>

  <div>
    <%= form.label :notes, "備考", style: "display: block" %>
    <%= form.text_area :notes, rows: 3 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
