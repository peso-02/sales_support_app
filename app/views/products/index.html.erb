<p style="color: green"><%= notice %></p>

<h1>商品一覧</h1>

<%= link_to "新規登録", new_product_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>商品コード</th>
      <th>商品名</th>
      <th>入数</th>
      <th>A単価</th>
      <th>B単価</th>
      <th>C単価</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_code %></td>
        <td><%= link_to product.product_name, product %></td>
        <td><%= product.case_quantity %></td>
        <td><%= number_to_currency(product.standard_price_a, unit: "¥", precision: 0) if product.standard_price_a %></td>
        <td><%= number_to_currency(product.standard_price_b, unit: "¥", precision: 0) if product.standard_price_b %></td>
        <td><%= number_to_currency(product.standard_price_c, unit: "¥", precision: 0) if product.standard_price_c %></td>
        <td>
          <%= link_to "編集", edit_product_path(product) %>
          <%= button_to "削除", product, method: :delete, data: { turbo_confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
